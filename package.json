    "nodemon": "^2.0.15",
    "webpack": "^5.64.3",
    "webpack-cli": "^4.9.1"
  },
  "engines": {
    "node": "16.x",
    "yarn": "1.x"
  },
  "type": "module",
  "private": true
}
